<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
			PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="po.Comment" table="comment"><!-- 每个class对应一个持久化对象 -->
		 <composite-id>  
           <key-property name="cid"  type="string"></key-property>
           <key-property name="rid"  type="string"></key-property>  
        </composite-id>  
		<property name="content"></property><!-- 映射属性 -->
		<property name="time"></property><!-- 映射属性 -->
		<property name="uid"></property><!-- 映射属性 -->
		
	</class>	
</hibernate-mapping>